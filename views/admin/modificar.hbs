<div class="container" style="margin:100px auto;padding:0px;">
    <div class="row-2" style="margin:0px;">
        <div class="col-6">
            <h4>Modificar una nueva novedad</h4>
            <form action="/admin/novedades/modificar" method="post" style="display: block;">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" id="usuario" name="titulo" placeholder="Titulo"
                        value="{{novedad.titulo}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" name="subtitulo" placeholder="Subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" name="cuerpo" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>