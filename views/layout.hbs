<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PaginaWeb</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Edu+VIC+WA+NT+Beginner&family=Gothic+A1:wght@300;500;700&family=Open+Sans:ital@1&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/1542402d37.js" crossorigin="anonymous"></script>
</head>

<body>


    <header>

        <div class="logo">
            <img src="/images/logo_black.png" alt="">
        </div>

    </header>

    <!-- Barra de Navegacion -->
    <nav>
        <div class="barra">
            <ul>
                <a class="{{#if isHome}}activo{{/if}}" href="/">
                    <li><i class="fa-solid fa-house"></i>
                        <p class="icon_c">Inicio</p>
                    </li>
                </a>
                <a class="{{#if isNosotros}}activo{{/if}}"  href="/nosotros">
                    <li><i class="fa-solid fa-user"></i>
                        <p class="icon_c">Nosotros</p>
                    </li>
                </a>
                <a class="{{#if isHome}}activo{{/if}}"  href="/">
                    <li><img src="/images/logo_black.png" alt="logo"></li>
                </a>
                <a class="{{#if isClientes}}activo{{/if}}"  href="/clientes">
                    <li><i class="fa-solid fa-handshake"></i>
                        <p class="icon_c">Clientes</p>
                    </li>
                </a>
                <a class="{{#if isContacto}}activo{{/if}}"  href="/contacto">
                    <li><i class="fa-solid fa-phone"></i>
                        <p class="icon_c">Contacto</p>
                    </li>
                </a>
            </ul>
        </div>
    </nav>
    <!-- Fin -->

    <!-- Contenido de la Pagina -->

  <main>
    {{{body}}}
  </main>

    <!-- Fin -->

    <!-- Pie de Pagina -->

    <footer>
        <div class="contactoinfo">
            <p>555-1020-512</p>
            <p>noiserecords@gmail.com</p>
            <p>Av. Cabildo 9283</p>
        </div>
        <div class="copyright">
            <p>&copy; Noise Records </p>
        </div>
    </footer>

    <!-- Fin -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>